{
  "name": "react-project-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "git stash save pre-push-stash && CI=true npm test || (git stash pop $(git stash list | grep pre-push-stash | cut -d: -f1) && exit 1) ",
      "post-push": "git stash pop $(git stash list | grep pre-push-stash | cut -d: -f1)"
    }
  }
}
